@model PEDFAM.Models.Pacientes
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Crear Paciente</h4>
    </div>
        <div class="panel-body">
            <form action="@Url.Action("Crear","Pacientes")" method="post">

                <div class="form-group">
                    <label>Nombre</label>
                    <input class="form-control" type="text" name="nombrePac" />
                </div>
                <div class="form-group">
                    <label>Edad</label>
                    <input class="form-control" type="text" name="edad" />
                </div>
                <div class="form-group">
                    <label>Tutor</label>
                    <input class="form-control" type="text" name="tutor" />
                </div>
                <div class="form-group">
                    <label>Alergias</label>
                    <input class="form-control" type="text" name="alergias" />
                </div>
                <div class="form-group">
                    <label>Enfermedades Cronicas</label>
                    <input class="form-control" type="text" name="enfCronicas" />
                </div>
                <div class="form-group">
                    <label>Hospitalizaciones</label>
                    <input class="form-control" type="text" name="hospitazacion" />
                </div>
                <div class="form-group">
                    <label>Operaciones</label>
                    <input class="form-control" type="text" name="operaciones" />
                </div>
                <div class="form-group">
                    <label>EMail</label>
                    <input class="form-control" type="text" name="mai" />
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input class="form-control" type="text" name="pass" />
                </div>

                <hr />
                <button type="submit" class="btn btn-primary">Registrar</button>
                <a class="btn btn-success" href="@Url.Action("Inicio","Pacientes")">Ver Lista</a>
                <a></a>
            </form>


        </div>
    </div>
