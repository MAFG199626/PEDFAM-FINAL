@model PEDFAM.Models.Medicos
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Crear Medico</h4>
    </div>
    <div class="panel-body">
        <form action="@Url.Action("Crear","Medicos")" method="post">

            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" type="text" name="nombreCompleto" />
            </div>
            <div class="form-group">
                <label>Telefono</label>
                <input class="form-control" type="text" name="telefono" />
            </div>
            <div class="form-group">
                <label>Url Foto</label>
                <input class="form-control" type="text" name="urlFt" />
            </div>
            <div class="form-group">
                <label>Url Firma</label>
                <input class="form-control" type="text" name="urlFirmaMedica" />
            </div>
            <div class="form-group">
                <label>Correo</label>
                <input class="form-control" type="text" name="mai" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input class="form-control" type="text" name="pass" />
            </div>
           
            <hr />
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a class="btn btn-success" href="@Url.Action("Inicio","Medicos")">Ver Lista</a>
            <a></a>
        </form>


    </div>
</div>
